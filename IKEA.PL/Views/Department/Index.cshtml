
@model IEnumerable<DepartmentToReturnDto>
@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>
<a asp-controller="Home" asp-action="Create" class="btn btn-primary">Create New Department</a>

@if(Model.Count()>0)
{
    <table class="table table-striped table table-hover mt-4">
        <thead class="text-center">
        <th>@Html.DisplayNameFor(D=>D.Code)</th>
        <th>@Html.DisplayNameFor(D => D.Name)</th>
        <th>@Html.DisplayNameFor(D => D.CreationDate)</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
        </thead>
        <tbody class="text-center">
            @foreach(var department in Model)
            {
                <td>@department.Code</td>
                <td>@department.Name</td>
                <td>@department.CreationDate</td>
                <td>
                <a asp-controller="Departments" asp-action="Details" asp-route-id="@department.Id" class="btn btn-warning">
                       @* <i class="fas fa-eye"></i> Details *@
                    Details
                    </a>
                </td>
            <td>
                <a asp-controller="Departments" asp-action="Edit" asp-route-id="@department.Id" class="btn btn-success">
                    @* <i class="fas fa-edit"></i> Update *@
                    Update
                </a>
            </td>
            <td>
                <a asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">
                    @* <i class="fas fa-trash"></i> Delete *@
                    Delete
                </a>
            </td>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h3> There Is No Departments :(</h3>
    </div>
}

